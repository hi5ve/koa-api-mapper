{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
    //    "standard",
    //    "standard-react"
  ],
  "plugins": [
    "mocha",
    "babel",
    "react",
    "promise",
    "chai-friendly"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "__COVERAGE__": false,
    "__BASENAME__": true,
    "___INITIAL_STATE__": true
  },
  "rules": {
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "mocha/no-exclusive-tests": "error",
    "semi": [
      2,
      "never"
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ],
    "max-len": [
      2,
      120,
      2
    ],
    "generator-star-spacing": 1,
    //    "babel/generator-star-spacing": 1,
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "no-confusing-arrow": [
      "error",
      {
        "allowParens": true
      }
    ],
    // Rule overrides
    "react/jsx-filename-extension": 0
    // Allow .react.js file extension
  }
}
